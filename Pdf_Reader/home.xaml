<Page x:Class="Pdf_Reader.home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pdf_Reader"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="home" Background="#3d3d3d">
    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Foreground="#e67e22" FontWeight="ExtraBold" FontSize="20">Welcome To this app</Label>
            <Label FontWeight="Medium">This application can Upload a PDF to Database</Label>
            <Label FontWeight="Medium">This Application can list the uploaded PDF files</Label>
            <Label FontWeight="Medium">Can Also be used to view uploaded PDF</Label>
        </StackPanel>
    </Grid>
</Page>
